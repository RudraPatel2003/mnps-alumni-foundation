---
type Props = {
  title: string;
  description: string;
  href: string;
};

export type PillarInformation = Props;

const { title, description, href } = Astro.props;
---

<article
  class="flex h-full flex-col rounded-xl bg-primary p-6 text-white shadow-lg"
>
  <h3 class="text-2xl font-semibold">{title}</h3>
  <p class="mt-4 text-base leading-relaxed text-white/90">{description}</p>
  <div class="mt-auto pt-6">
    <a
      href={href}
      class="inline-flex items-center rounded-md bg-white px-6 py-3 text-primary transition-colors duration-300 hover:bg-secondary/80"
    >
      LEARN MORE
    </a>
  </div>
</article>
